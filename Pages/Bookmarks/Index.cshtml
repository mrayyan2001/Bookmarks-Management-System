@page
@model BookmarkManagementSystem.Pages.Bookmarks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="mb-4">Bookmark Management</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Bookmark[0].Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Bookmark[0].URL)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Bookmark)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        <td><a href="@item.URL" target="_blank">@Html.DisplayFor(modelItem => item.URL)</a></td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


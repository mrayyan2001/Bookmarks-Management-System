@page
@model BookmarkManagementSystem.Pages.Bookmarks.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="mb-4 text-danger">Delete Bookmark</h1>

    <h3 class="text-warning">Are you sure you want to delete this?</h3>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Bookmark Details</h5>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bookmark.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Bookmark.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bookmark.URL)</dt>
                <dd class="col-sm-9">
                    <a href="@Model.Bookmark.URL" target="_blank">@Html.DisplayFor(model => model.Bookmark.URL)</a>
                </dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Bookmark.ID" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </form>
</div>


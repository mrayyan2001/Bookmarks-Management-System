@page
@model BookmarkManagementSystem.Pages.Bookmarks.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h1 class="mb-4">Bookmark Details</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Details</h5>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bookmark.Title)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Bookmark.Title)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Bookmark.URL)</dt>
                <dd class="col-sm-9">
                    <a href="@Model.Bookmark.URL" target="_blank">@Html.DisplayFor(model => model.Bookmark.URL)</a>
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <a asp-page="./Edit" asp-route-id="@Model.Bookmark.ID" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Ensure to include Bootstrap and optionally Bootstrap Icons in your layout file -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
